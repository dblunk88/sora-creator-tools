{
  "manifest_version": 2,
  "name": "Sora Creator Tools - Video Stats & Analytics",
  "version": "1.1.14",
  "description": "Powerful overlays for video view stats, Dashboard mode for deeper insights, Analysis mode for Top feed analysis, and more!",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["api.js", "inject.js"],
  "content_scripts": [
    {
      "matches": ["https://sora.chatgpt.com/*", "https://sora.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "https://sora.chatgpt.com/*",
    "https://sora.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "sora-creator-tools@fancyson.ai",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}

